<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_common_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/title_margin">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adaptive_48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/adaptive_28dp"
            android:layout_height="@dimen/adaptive_28dp"
            android:layout_marginStart="@dimen/adaptive_20dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/adaptive_10dp"
            android:layout_weight="1"
            android:text="聊天详情"
            android:textColor="@color/white"
            android:textSize="@dimen/adaptive_18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/adaptive_20dp"
        android:paddingTop="@dimen/adaptive_19dp"
        android:paddingRight="@dimen/adaptive_20dp"
        android:paddingBottom="@dimen/adaptive_17dp">

        <com.community.easeim.common.widget.CircleImageView
            android:id="@+id/civ_head"
            android:layout_width="@dimen/adaptive_36dp"
            android:layout_height="@dimen/adaptive_36dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/adaptive_10dp"
            android:layout_weight="1"
            android:text="区友昵称"
            android:textColor="@color/white"
            android:textSize="@dimen/adaptive_18sp" />

        <ImageView
            android:layout_width="@dimen/adaptive_20dp"
            android:layout_height="@dimen/adaptive_20dp"
            android:src="@drawable/icon_go" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/adaptive_1dp"
        android:background="#47464B" />

    <LinearLayout
        android:id="@+id/ll_search_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/adaptive_20dp"
        android:paddingTop="@dimen/adaptive_19dp"
        android:paddingRight="@dimen/adaptive_20dp"
        android:paddingBottom="@dimen/adaptive_17dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/adaptive_10dp"
            android:layout_weight="1"
            android:text="查找聊天记录"
            android:textColor="@color/white"
            android:textSize="@dimen/adaptive_18sp" />

        <ImageView
            android:layout_width="@dimen/adaptive_20dp"
            android:layout_height="@dimen/adaptive_20dp"
            android:src="@drawable/icon_go" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/adaptive_1dp"
        android:background="#47464B" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/adaptive_20dp"
        android:paddingTop="@dimen/adaptive_19dp"
        android:paddingRight="@dimen/adaptive_20dp"
        android:paddingBottom="@dimen/adaptive_17dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/adaptive_10dp"
            android:layout_weight="1"
            android:text="会话置顶"
            android:textColor="@color/white"
            android:textSize="@dimen/adaptive_18sp" />

        <Switch
            android:id="@+id/sw_conversion_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="@dimen/adaptive_34dp"
            android:thumb="@drawable/switch_ios_thumb"
            android:track="@drawable/switch_ios_track_selector"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/adaptive_1dp"
        android:background="#47464B" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/adaptive_20dp"
        android:paddingTop="@dimen/adaptive_19dp"
        android:paddingRight="@dimen/adaptive_20dp"
        android:paddingBottom="@dimen/adaptive_17dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/adaptive_10dp"
            android:layout_weight="1"
            android:text="消息免打扰"
            android:textColor="@color/white"
            android:textSize="@dimen/adaptive_18sp" />

        <Switch
            android:id="@+id/sw_not_disturb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="@dimen/adaptive_34dp"
            android:thumb="@drawable/switch_ios_thumb"
            android:track="@drawable/switch_ios_track_selector"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/adaptive_1dp"
        android:background="#47464B" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_clear_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/adaptive_32dp"
        android:text="清空聊天记录"
        android:textColor="#27AE60"
        android:textSize="@dimen/adaptive_18sp" />

</LinearLayout>