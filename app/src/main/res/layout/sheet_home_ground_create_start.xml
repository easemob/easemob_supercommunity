<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sheet_height"
    android:background="@drawable/sp_bottom_sheet">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/adaptive_28dp"
        android:layout_height="@dimen/adaptive_28dp"
        android:layout_marginTop="@dimen/adaptive_11dp"
        android:layout_marginStart="@dimen/adaptive_17dp"
        android:background="@drawable/icon_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_public"
        android:layout_width="311dp"
        android:layout_height="@dimen/adaptive_48dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/adaptive_3dp"
        android:layout_marginTop="@dimen/adaptive_62dp"
        android:background="@drawable/sp_radius_48_27ae60"
        android:text="创建公开社区"
        android:textSize="@dimen/adaptive_18sp"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_close" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/adaptive_16dp"
        app:layout_constraintTop_toTopOf="@id/tv_public"
        app:layout_constraintRight_toRightOf="@id/tv_public"
        android:layout_marginEnd="@dimen/adaptive_20dp"
        android:src="@drawable/icon_go" />

    <TextView
        android:id="@+id/tv_private"
        android:layout_width="311dp"
        android:layout_height="@dimen/adaptive_48dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/adaptive_12dp"
        android:layout_marginStart="@dimen/adaptive_3dp"
        android:textSize="@dimen/adaptive_18sp"
        android:background="@drawable/sp_radius_1f1f1f_border_414042"
        android:text="创建私密社区"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_public" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/adaptive_16dp"
        app:layout_constraintTop_toTopOf="@id/tv_private"
        app:layout_constraintRight_toRightOf="@id/tv_private"
        android:layout_marginEnd="@dimen/adaptive_20dp"
        android:src="@drawable/icon_go" />


</androidx.constraintlayout.widget.ConstraintLayout>