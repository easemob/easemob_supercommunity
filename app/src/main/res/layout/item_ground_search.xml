<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/adaptive_50dp"
        android:layout_height="@dimen/adaptive_50dp"
        android:layout_margin="@dimen/adaptive_20dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/adaptive_15dp"
        android:layout_marginTop="@dimen/adaptive_20dp"
        android:text="超级大的社区"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_head"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/adaptive_15dp"
        android:layout_marginTop="@dimen/adaptive_5dp"
        android:text="Fancy的社区介绍"
        android:textColor="#999999"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/iv_head"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/adaptive_20dp"
        android:layout_marginEnd="@dimen/adaptive_10dp"
        android:text="3000人"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/adaptive_1dp"
        android:background="#999999"
        android:layout_marginTop="@dimen/adaptive_20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_head"/>

</androidx.constraintlayout.widget.ConstraintLayout>