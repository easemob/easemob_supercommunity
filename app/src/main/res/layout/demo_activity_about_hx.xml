<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/title_margin"
    android:background="@color/my_common_color">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adaptive_48dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/adaptive_28dp"
            android:layout_height="@dimen/adaptive_28dp"
            android:layout_marginStart="@dimen/adaptive_20dp"
            android:src="@drawable/icon_back"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/adaptive_18sp"
            android:layout_marginStart="@dimen/adaptive_10dp"
            android:text="@string/em_about_me_hx"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/em_margin_20"
        android:background="@color/white">

        <ImageView
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:src="@drawable/em_login_logo"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            tools:text="环信IM3.6.8"
            android:textSize="14sp"
            android:textColor="@color/black"/>

    </LinearLayout>


    <com.community.easeim.common.widget.ArrowItemView
        android:id="@+id/item_privacy_regulations"
        android:layout_width="match_parent"
        android:layout_height="@dimen/em_common_item_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_security"
        app:arrowItemTitleColor="@color/white"
        app:arrowItemAvatarHeight="@dimen/em_about_me_avatar_size"
        app:arrowItemAvatarWidth="@dimen/em_about_me_avatar_size"
        app:arrowItemTitle="@string/em_about_hx_company_privacy_regulations"
        android:foreground="@drawable/demo_ripple_click_gray" />



    <com.community.easeim.common.widget.ArrowItemView
        android:id="@+id/item_disclaimers"
        android:layout_width="match_parent"
        android:layout_height="@dimen/em_common_item_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:arrowItemTitleColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/item_security"
        app:arrowItemAvatarHeight="@dimen/em_about_me_avatar_size"
        app:arrowItemAvatarWidth="@dimen/em_about_me_avatar_size"
        app:arrowItemTitle="@string/em_about_hx_company_disclaimers"
        android:foreground="@drawable/demo_ripple_click_gray"
        android:background="@color/white"/>

    <com.community.easeim.common.widget.ArrowItemView
        android:id="@+id/item_registered_easemob_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/em_common_item_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:arrowItemTitleColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/item_security"
        app:arrowItemAvatarHeight="@dimen/em_about_me_avatar_size"
        app:arrowItemAvatarWidth="@dimen/em_about_me_avatar_size"
        app:arrowItemTitle="@string/em_about_hx_company_reg_account"
        android:foreground="@drawable/demo_ripple_click_gray"
        android:background="@color/white"/>



    <com.community.easeim.common.widget.ArrowItemView
        android:id="@+id/item_release_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/em_common_item_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_security"
        app:arrowItemTitleColor="@color/white"
        app:arrowItemAvatarHeight="@dimen/em_about_me_avatar_size"
        app:arrowItemAvatarWidth="@dimen/em_about_me_avatar_size"
        app:arrowItemTitle="@string/em_about_hx_company_release_time"
        app:arrowItemShowArrow="false"
        app:arrowItemContent="2022-03-01"
        android:foreground="@drawable/demo_ripple_click_gray"
        android:background="@color/white"/>


    <com.community.easeim.common.widget.ArrowItemView
        android:id="@+id/item_sdk_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/em_common_item_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_security"
        app:arrowItemAvatarHeight="@dimen/em_about_me_avatar_size"
        app:arrowItemAvatarWidth="@dimen/em_about_me_avatar_size"
        app:arrowItemTitle="@string/em_about_hx_company_sdk_version"
        app:arrowItemTitleColor="@color/white"
        app:arrowItemShowArrow="false"
        app:arrowItemContent="v1.1.1"
        android:foreground="@drawable/demo_ripple_click_gray"
        android:background="@color/white"/>

</LinearLayout>